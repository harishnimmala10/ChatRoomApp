<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProfileActivity">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewUserFName"
        android:layout_above="@+id/textViewLNameLabel"
        android:layout_toRightOf="@+id/textViewFNameLabel"
        android:layout_toEndOf="@+id/textViewFNameLabel" />

    <TextView
        android:text="@string/last_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/textViewLNameLabel"
        android:layout_below="@+id/textViewFNameLabel"
        android:layout_alignLeft="@+id/textViewFNameLabel"
        android:layout_alignStart="@+id/textViewFNameLabel" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewLNameLabel"
        android:layout_alignLeft="@+id/textViewUserFName"
        android:layout_alignStart="@+id/textViewUserFName"
        android:id="@+id/textViewEditLName" />

    <TextView
        android:text="@string/gender_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewGenderLabel"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textViewLNameLabel"
        android:layout_alignEnd="@+id/textViewLNameLabel" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewGenderLabel"
        android:layout_alignLeft="@+id/textViewEditLName"
        android:layout_alignStart="@+id/textViewEditLName"
        android:id="@+id/textViewUserGender" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:id="@+id/imageViewProfilePic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textViewUserFName"
        android:paddingBottom="30dp" />

    <TextView
        android:text="@string/first_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="114dp"
        android:id="@+id/textViewFNameLabel"
        android:layout_below="@+id/imageViewEditProfile"
        android:layout_alignLeft="@+id/imageViewProfilePic"
        android:layout_alignStart="@+id/imageViewProfilePic" />

    <ImageView
        app:srcCompat="@drawable/profile_edit"
        android:id="@+id/imageViewEditProfile"
        android:layout_width="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="40dp" />

    <Button
        android:text="@string/btn_ok_label"
        android:layout_height="wrap_content"
        android:id="@+id/buttonOk"
        android:layout_marginBottom="75dp"
        android:layout_width="250dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
